{
    "name": "PitchNet",
    "n_gpu": 1,

    "arch": {
        "type": "PitchModel",
        "args": {
            "sequence_length": 200,
            "hidden_units_per_layer": 15,
            "levels" : 7,
            "kernel_size": 5,
            "dropout_value": 0.1
        }
    },
    "data_loader": {
        "type": "SimBoundingBoxPitchDataLoader",
        "args":{
            "bounding_boxes_path": "data/raw/sim/bb/",
            "pose_files_path": "data/raw/sim/poses/",
            "poses_files_prefix": "poses_t",
            "bbs_files_prefix": "bb_t",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "sequence_length": 200,
            "downsample_rate": 1,
            "filter_pitch" : false,
            "pitch_threshold": 0.05
        }
    },
    "real_data_loader": {
        "type": "RealBoundingBoxPitchDataLoader",
        "args": {
            "bounding_boxes_path": "data/raw/real/results_2019-09-10-16-58-50_angle.txt",
            "pose_files_path": "data/raw/real/pose_gtboxes_and_time/",
            "poses_files_prefix": "pose_gtboxes_and_time_",
            "bbs_files_prefix": "bb_t",
            "batch_size": 512,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2,
            "sequence_length": 200
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mse_deg","std_deg"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
